generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Genre {
  id        Int      @id @default(autoincrement())
  name      String
  musics    Music[]
}

model Year {
  id        Int      @id @default(autoincrement())
  name      String
  musics    Music[]
}

model Music {
  id        Int      @id @default(autoincrement())
  name      String
  author    String
  audio_url String

  genreId   Int
  genre     Genre    @relation(fields: [genreId], references: [id])

  yearId    Int
  year      Year     @relation(fields: [yearId], references: [id])

  playlists Playlist[]

  createdAt DateTime @default(now())
}

model Playlist {
  id        Int      @id @default(autoincrement())
  name      String
  image_url String?
  
  musics    Music[]
}